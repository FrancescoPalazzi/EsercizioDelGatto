<Window x:Class="WpfConsole.ViewCat"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfConsole"
        mc:Ignorable="d"
        Title="ViewCat" Height="450" Width="800">
    <Grid>
        <ListBox d:ItemsSource="{d:SampleData ItemCount=5}" Margin="0,0,588,0"/>
        <Label Content="Nome Adottante :" HorizontalAlignment="Left" Margin="254,25,0,0" VerticalAlignment="Top" FontSize="16" Width="146"/>
        <TextBox x:Name="AdopterName" HorizontalAlignment="Left" Margin="420,25,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="151" Height="31" FontSize="16"/>
        <DatePicker x:Name="DataAdoption" HorizontalAlignment="Left" Margin="420,87,0,0" VerticalAlignment="Top" FontSize="16"/>
        <Label Content="Data Adozione :" HorizontalAlignment="Left" Margin="254,85,0,0" VerticalAlignment="Top" FontSize="16" Width="146"/>
        <Button x:Name="DeleteAdoption" Content="Rimuovi Gatto" HorizontalAlignment="Left" Margin="268,193,0,0" VerticalAlignment="Top" Height="64" Width="156" FontSize="16"/>
        <Button x:Name="AddAdoption" Content="Aggiungi Adozioni" HorizontalAlignment="Left" Margin="496,193,0,0" VerticalAlignment="Top" Height="64" Width="156" FontSize="16" Click="AddAdoption_Click"/>
        <Button x:Name="Back" Content="Torna Indietro" HorizontalAlignment="Left" Margin="384,319,0,0" VerticalAlignment="Top" Height="64" Width="156" FontSize="16"/>
    </Grid>
</Window>
